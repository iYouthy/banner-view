<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <cn.iyouthy.view.banner.views.BannerView
        android:id="@+id/vBanner"
        android:layout_width="400dp"
        android:layout_height="250dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@android:color/holo_green_dark" />

    <View
        android:id="@+id/vErrorState"
        android:layout_width="0px"
        android:layout_height="0px"
        android:background="@drawable/error"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/vBanner"
        app:layout_constraintLeft_toLeftOf="@+id/vBanner"
        app:layout_constraintRight_toRightOf="@+id/vBanner"
        app:layout_constraintTop_toTopOf="@+id/vBanner" />

</androidx.constraintlayout.widget.ConstraintLayout>